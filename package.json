{
  "name": "@eeerlend/flextable-next",
  "version": "2.0.0",
  "description": "A flexible table component for Next.js",
  "license": "ISC",
  "author": "Erlend Mongstad",
  "type": "module",
  "main": "./dist/exports.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eeerlend/flextable-next"
  },
  "exports": {
    ".": "./dist/exports.js",
    "./client": "./dist/exports-client.js"
  },
  "files": [
    "dist",
    "README.md",
    "package.json"
  ],
  "scripts": {
    "build": "tsup",
    "build:old": "node build.js",
    "dev:legacy": "nodemon --watch src --ext js,jsx,ts,tsx --exec \"npm run build:old\"",
    "dev": "tsup --watch",
    "prepublishOnly": "npm run build",
    "pretest": "npm run build",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run"
  },
  "dependencies": {
    "react-icons": "^5.5.0",
    "react-select": "^5.10.2",
    "string-similarity-js": "^2.1.4"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@vitejs/plugin-react": "^5.1.0",
    "@vitest/ui": "^4.0.8",
    "esbuild": "^0.24.0",
    "jsdom": "^27.1.0",
    "nodemon": "^3.0.0",
    "semantic-release": "^25.0.2",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.8"
  },
  "peerDependencies": {
    "next": "^14 || ^15 || ^16",
    "next-intl": "^4.5.0",
    "react": "^18 || ^19",
    "react-dom": "^18 || ^19",
    "tailwindcss": "^4"
  },
  "publishConfig": {
    "access": "public"
  }
}
